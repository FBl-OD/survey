<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/tv_title8"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="QUESTION8"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_question8"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:text="Which brand of phone will you choose if you are going to buy a new one ?"
        />
<RadioGroup
    android:id="@+id/rg_seven_id8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/rb_choice8_1"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Iphone"
        />

    <RadioButton
        android:id="@+id/rb_choice8_2"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Nokia"
        />

    <RadioButton
        android:id="@+id/rb_choice8_3"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Sumsung"
        />

    <RadioButton
        android:id="@+id/rb_choice8_4"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="MI"
        />

    <RadioButton
        android:id="@+id/rb_choice8_5"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Lenovo"
        />

    <RadioButton
        android:id="@+id/rb_choice8_6"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Sony"
        />

    <RadioButton
        android:id="@+id/rb_choice8_7"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Others"
        />
</RadioGroup>

    <Button
        android:id="@+id/bt_next8"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#009688"
        android:text="NEXT"
        android:onClick="click8"
        android:textSize="20sp"
        />

    <!-- END    : Your code should be within this block -->

</LinearLayout>
