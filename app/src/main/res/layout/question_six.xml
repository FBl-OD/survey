<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/exit">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/tv_title6"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="QUESTION6"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_question6"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:text="What function do you expect your phone to have in the future ?"
        />

    <EditText
        android:id="@+id/et_input6_1"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:maxLength="20"
        android:hint="input here..."
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/bt_next6"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp"
        android:background="#009688"
        android:hint="NEXT"
        android:onClick="click6"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <!-- END    : Your code should be within this block -->

</LinearLayout>
