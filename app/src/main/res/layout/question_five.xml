<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/tv_title5"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="QUESTION5"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_question5"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:text="What functions are the most often used ?"
        />

<LinearLayout
    android:id="@+id/linear_seven_id5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cb_choice5_1"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Music functions"
        />

    <CheckBox
        android:id="@+id/cb_choice5_2"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Photo functions"
        />

    <CheckBox
        android:id="@+id/cb_choice5_3"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Game functions"
        />

    <CheckBox
        android:id="@+id/cb_choice5_4"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Business functions(Word,Excel,ect.)"
        />

    <CheckBox
        android:id="@+id/cb_choice5_5"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="GPS functions"
        />

    <CheckBox
        android:id="@+id/cb_choice5_6"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Data functions(Bluetooth,WLAN,ect.)"
        />

    <CheckBox
        android:id="@+id/cb_choice5_7"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Others"
        />
</LinearLayout>

    <Button
        android:id="@+id/bt_next5"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#009688"
        android:text="NEXT"
        android:onClick="click5"
        android:textSize="20sp"
        />

    <!-- END    : Your code should be within this block -->

</LinearLayout>
